{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"]
  },
  "include": ["src/ImageMasker/**/*"],
  "exclude": ["node_modules"]
}
